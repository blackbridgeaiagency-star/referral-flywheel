{
  "buildCommand": "prisma generate && next build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "env": {
    "DATABASE_URL": "@database_url",
    "WHOP_API_KEY": "@whop_api_key",
    "WHOP_WEBHOOK_SECRET": "@whop_webhook_secret",
    "NEXT_PUBLIC_WHOP_APP_ID": "@whop_app_id",
    "NEXT_PUBLIC_WHOP_COMPANY_ID": "@whop_company_id",
    "NEXT_PUBLIC_APP_URL": "@app_url",
    "CRON_SECRET": "@cron_secret",
    "IP_HASH_SALT": "@ip_hash_salt"
  },
  "build": {
    "env": {
      "DATABASE_URL": "@database_url",
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "app/api/webhooks/whop/route.ts": {
      "maxDuration": 10
    },
    "app/api/leaderboard/route.ts": {
      "maxDuration": 5
    },
    "app/api/earnings/history/route.ts": {
      "maxDuration": 5
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/discover",
      "permanent": false
    }
  ],
  "crons": [
    {
      "path": "/api/cron/reset-monthly-stats",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/cron/backup-database",
      "schedule": "0 2 * * *"
    }
  ]
}